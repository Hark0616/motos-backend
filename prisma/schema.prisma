generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Moto {
  id              Int        @id @default(autoincrement())
  marca           String
  modelo          String
  a√±o            Int
  kilometraje     Int
  estado          String
  precioCompra    Float
  precioVenta     Float?
  fechaCompra     DateTime   @default(now())
  fechaVenta      DateTime?
  clienteActualId Int?
  descripcion     String?
  documentos      Json?
  fotos           String[]
  reparaciones    Json?
  comisiones      Comision[]
  compras         Compra[]
  gastos          Gasto[]
  clienteActual   Cliente?   @relation("ClienteActualMotos", fields: [clienteActualId], references: [id])
  ventas          Venta[]
}

model Cliente {
  id            Int      @id @default(autoincrement())
  nombre        String
  cedula        String   @unique
  telefono      String?
  correo        String?
  rol           String
  compras       Compra[]
  motosActuales Moto[]   @relation("ClienteActualMotos")
  ventas        Venta[]
}

model Compra {
  id        Int      @id @default(autoincrement())
  motoId    Int
  clienteId Int
  precio    Float
  fecha     DateTime @default(now())
  cliente   Cliente  @relation(fields: [clienteId], references: [id])
  moto      Moto     @relation(fields: [motoId], references: [id])
}

model Venta {
  id             Int        @id @default(autoincrement())
  motoId         Int
  clienteId      Int
  precio         Float
  fecha          DateTime   @default(now())
  formaPago      String
  traspasoEstado String
  comisiones     Comision[]
  cliente        Cliente    @relation(fields: [clienteId], references: [id])
  moto           Moto       @relation(fields: [motoId], references: [id])
}

model Gasto {
  id          Int       @id @default(autoincrement())
  descripcion String?
  monto       Float
  fecha       DateTime  @default(now())
  motoId      Int?
  comprobante String?
  fechaPago   DateTime?
  notas       String?
  pagado      Boolean   @default(false)
  tipo        TipoGasto
  moto        Moto?     @relation(fields: [motoId], references: [id])
}

model Comision {
  id        Int       @id @default(autoincrement())
  monto     Float
  fecha     DateTime  @default(now())
  pagado    Boolean   @default(false)
  fechaPago DateTime?
  motoId    Int
  ventaId   Int?
  notas     String?
  moto      Moto      @relation(fields: [motoId], references: [id])
  venta     Venta?    @relation(fields: [ventaId], references: [id])
}

enum TipoGasto {
  ALQUILER
  MECANICO
  COMISION
  COMIDA
  MATERIALES
  TRASPASO
  REPUESTOS
  MANTENIMIENTO
  OTROS
}
